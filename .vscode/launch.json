{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TowerIQ (Main Entry)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/tower_iq/main_app_entry.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [],
            "env": {},
            "justMyCode": false,
            "stopOnEntry": false,
            "pythonPath": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Debug TowerIQ (Function Call)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/python.exe",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["-c", "from tower_iq.main_app_entry import main; main()"],
            "env": {},
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug TowerIQ with Args",
